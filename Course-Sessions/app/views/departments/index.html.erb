<h1>Listing departments</h1>

<table>
  <tr>
    <th>Department</th>
    <th>Personality</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @departments.each do |department| %>
  <tr>
    <td><%= department.name %></td>
    <td><%= department.personality_types.map { |e| Algorithm::PERSONALITY_TYPE[e.to_i]  }.join(",")  %></td>
    <td><%= link_to 'Show', department_path(department) %></td>
    <td><%= link_to 'Edit', edit_department_path(department) %></td>
    <td><%= link_to 'Destroy', department_path(department), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

